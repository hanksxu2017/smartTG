<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 统计任务类 -->
    <bean id="statisticsTask" class="cn.com.smart.web.task.StatisticsTask"/>
    <!-- 配置JobDetail -->
    <bean id="statisticsJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <!-- 执行目标job -->
        <property name="targetObject" ref="statisticsTask"/>
        <!-- 要执行的方法 -->
        <property name="targetMethod" value="execute"/>
    </bean>
    <!-- 配置tirgger触发器 -->
    <bean id="statisticsTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <!-- jobDetail -->
        <property name="jobDetail" ref="statisticsJobDetail"/>
        <!-- cron表达式，执行时间  每月1号凌晨1点执行一次 -->
        <property name="cronExpression" value="0 0 1 1 * ?"/>
    </bean>



    <!-- 统计任务类 -->
    <bean id="generateWeekCourseTask" class="cn.com.smart.web.task.GenerateWeekCourseTask"/>
    <!-- 配置JobDetail -->
    <bean id="generateWeekCourseJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <!-- 执行目标job -->
        <property name="targetObject" ref="generateWeekCourseTask"/>
        <!-- 要执行的方法 -->
        <property name="targetMethod" value="execute"/>
    </bean>
    <!-- 配置tirgger触发器 -->
    <bean id="generateWeekCourseTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <!-- jobDetail -->
        <property name="jobDetail" ref="generateWeekCourseJobDetail"/>
        <!-- cron表达式，执行时间  每周一凌晨2点执行一次 -->
        <property name="cronExpression" value="0 2 0 ? * MON"/>
    </bean>


    <!-- 配置调度工厂 -->
    <bean id="springJobSchedulerFactoryBean" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="statisticsTrigger"/>
                <ref bean="generateWeekCourseTrigger"/>
            </list>
        </property>
    </bean>
</beans>